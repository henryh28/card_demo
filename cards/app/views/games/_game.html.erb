<fieldset class="event_area">
  <legend>Game Events</legend>
  <% session[:event_hand].each do |card| %>
    <div class="card">
      <div class="card_type"><%= card.card_type %></div><br>
      <div class="card_effect"><%= card.effect %></div><br>
      <div class="card_modifier"><%= card.modifier %></div><br>
      <div class="card_flavor_text">"<%= card.flavor_text %>"</div><br>
    </div>
  <% end %>
</fieldset>


<fieldset class="buy_area">
  <legend>Buy Area</legend>
  <% session[:buy_hand].each do |card| %>
    <div class="card">
      <div class="card_type"><%= card.card_type %></div>
      <div class="card_effect"><%= card.effect %></div>
      <div class="card_modifier"><%= card.modifier %></div><br>
      <div class="card_flavor_text">"<%= card.flavor_text %>"</div><br>
      <div class="card_cost">Cost: <%= card.cost %></div>
    </div>
  <% end %>
</fieldset><br>


<fieldset class="game_area">
  <legend>Player Hand</legend>
  <% session[:player_hand].each do |card| %>
    <div class="card">
      <div class="card_type"><%= card.card_type %></div><br>
      <div class="card_effect"><%= card.effect %></div><br>
      <div class="card_modifier"><%= card.modifier %></div><br>
      <div class="card_flavor_text">"<%= card.flavor_text %>"</div><br>
    </div>
  <% end %><br>

  <div class="round_details">
    <% tally_resources %>
    <table>
      <tr>
        <th>Draw pile: <%= session[:player_deck].size %></th>
        <th>Discard: <%= session[:player_discard].size %></th>
        <th>Action: <%= @round_stats.action %></th>
        <th>Buy: <%= @round_stats.buy %></th>
        <th>Credit: <%= @round_stats.credit %></th>
        <th>Energy: <%= @round_stats.energy %></th>
        <th>Attack: <%= @round_stats.attack %></th>
        <th>Defense: <%= @round_stats.defense %></th>
        <th>Hull: <%= session[:hull] %></th>
      </tr>
    </table>
  </div>
</fieldset><br>

<%= link_to "Play hand", games_play_path, method: :post %>

